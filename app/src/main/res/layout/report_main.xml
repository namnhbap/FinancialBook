<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reports"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundForm"
    tools:context="com.example.nguyennam.financialbook.reporttab.ReportMain">

    <RelativeLayout
        android:id="@+id/tabHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size48dp"
        android:background="@drawable/selector_layout_green">
        <TextView
            android:id="@+id/lbReport"
            style="@style/TextViewStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/Reports" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundForm">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/customeditmoney"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlSelectCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size48dp"
                android:layout_margin="2dp"
                android:background="@drawable/selector_listview_ismac"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/disclosure"
                    android:contentDescription="@string/Category"/>

                <TextView
                    android:id="@+id/lbCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:clickable="false"
                    android:text="@string/MucChi"
                    style="@style/FormEditTitle"/>

                <TextView
                    android:id="@+id/txtCategory"
                    style="@style/FormEditValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:padding="4dp"
                    android:layout_toLeftOf="@id/imgCategory"
                    android:layout_toStartOf="@id/imgCategory"
                    android:layout_toRightOf="@id/lbCategory"
                    android:layout_toEndOf="@id/lbCategory"
                    android:clickable="false" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/Line" />

            <RelativeLayout
                android:id="@+id/rlDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size48dp"
                android:layout_margin="2dp"
                android:background="@drawable/selector_listview_ismac"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/disclosure"
                    android:contentDescription="@string/description"/>

                <TextView
                    android:id="@+id/lbDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:clickable="false"
                    android:text="@string/DienGiai"
                    style="@style/FormEditTitle"/>

                <TextView
                    android:id="@+id/txtDescription"
                    style="@style/FormEditValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:padding="4dp"
                    android:layout_toLeftOf="@id/imgDescription"
                    android:layout_toStartOf="@id/imgDescription"
                    android:layout_toRightOf="@id/lbDescription"
                    android:layout_toEndOf="@id/lbDescription"
                    android:clickable="false" />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"/>

</LinearLayout>
