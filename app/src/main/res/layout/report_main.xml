<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reports"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundForm"
    tools:context="com.example.nguyennam.financialbook.reporttab.ReportMain">

    <RelativeLayout
        android:id="@+id/tabHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size48dp"
        android:background="@drawable/selector_layout_green">
        <TextView
            android:id="@+id/lbReport"
            style="@style/TextViewStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/Reports" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/customeditmoney"
        android:orientation="vertical"
        android:paddingBottom="0.5dp">

        <RelativeLayout
            android:id="@+id/rlAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size48dp"
            android:layout_margin="2dp"
            android:background="@drawable/selector_listview_ismac"
            android:clickable="true">

            <ImageView
                android:id="@+id/imgAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/Category"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:src="@drawable/disclosure" />

            <TextView
                android:id="@+id/lbAccount"
                style="@style/FormEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:padding="4dp"
                android:text="@string/Accounts" />

            <TextView
                android:id="@+id/txtAccount"
                style="@style/FormEditValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:layout_toEndOf="@id/lbAccount"
                android:layout_toLeftOf="@id/imgAccount"
                android:layout_toRightOf="@id/lbAccount"
                android:layout_toStartOf="@id/imgAccount"
                android:clickable="false"
                android:padding="4dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/Line" />

        <RelativeLayout
            android:id="@+id/rlViewBy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size48dp"
            android:layout_margin="2dp"
            android:background="@drawable/selector_listview_ismac"
            android:clickable="true">

            <ImageView
                android:id="@+id/imgViewBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/viewBy"
                android:src="@drawable/disclosure" />

            <TextView
                android:id="@+id/lbViewBy"
                style="@style/FormEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:padding="4dp"
                android:text="@string/viewBy" />

            <TextView
                android:id="@+id/txtViewBy"
                style="@style/FormEditValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:layout_toEndOf="@id/lbViewBy"
                android:layout_toLeftOf="@id/imgViewBy"
                android:layout_toRightOf="@id/lbViewBy"
                android:layout_toStartOf="@id/imgViewBy"
                android:clickable="false"
                android:padding="4dp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/expense"
        style="@style/TextViewByStyle"/>
    
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.github.mikephil.charting.charts.PieChart>

</LinearLayout>
