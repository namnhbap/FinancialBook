<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/customeditmoney"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtBudgetName"
            style="@style/FormEditValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                style="@style/FormEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/open" />

            <TextView
                android:id="@+id/txtDate"
                style="@style/FormEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/FormEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/ReportNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts" />

        <TextView
            android:id="@+id/txtAccount"
            style="@style/ReportNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budgetCategory" />

            <TextView
                android:id="@+id/txtCategory"
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budgetMoney" />

            <TextView
                android:id="@+id/txtAmountMoney"
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/money" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budgetExpense" />

            <TextView
                android:id="@+id/txtExpenseMoney"
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/money" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budgetRemain"
                android:textColor="@color/textTab" />

            <TextView
                android:id="@+id/txtRemainMoney"
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/textTab" />

            <TextView
                style="@style/ReportNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/money"
                android:textColor="@color/textTab" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/report_percent_line">

        <TextView
            android:id="@+id/lnTotalExpensedDetail"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/Line" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1.0"
            android:background="@color/incomeColor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnWithDayOfBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-21dp"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:layout_marginBottom="-18dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtToday"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/budget_today"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>