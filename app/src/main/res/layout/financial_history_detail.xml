<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tabHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size48dp"
        android:background="@drawable/selector_layout_green">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/selector_button_back"
            android:src="@drawable/previous"
            android:contentDescription="@string/financialHistory"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/lbDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnBack"
            android:layout_toEndOf="@id/btnBack"
            android:layout_toLeftOf="@id/lnSave"
            android:layout_toStartOf="@id/lnSave"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="@string/financialHistory"
            android:gravity="center"
            style="@style/TextViewStyleBold"/>

        <LinearLayout
            android:id="@+id/lnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/selector_button_back"
                android:src="@drawable/save_icon_button"
                android:contentDescription="@string/Save"/>
        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/formInputExpenseIncome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>